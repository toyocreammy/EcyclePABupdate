<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Login_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="#F5F5F5"
    tools:ignore="ButtonStyle"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/back"
            android:contentDescription="@string/back_button"
            android:elevation="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loginacc"
            android:textSize="28sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp" />

        <!-- Email Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/email_icon"
                android:src="@drawable/ic_email"
                app:tint="#808080" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:background="@android:color/transparent"
                android:hint="@string/enteryouremail"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="0dp"
                android:textColor="#333333"
                android:textColorHint="#757575" />
        </LinearLayout>

        <!-- Password Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/password_icon"
                android:src="@drawable/ic_lock"
                app:tint="#808080" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="password"
                android:background="@android:color/transparent"
                android:hint="@string/pass"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="0dp"
                android:textColor="#333333"
                android:textColorHint="#757575" />

            <ImageButton
                android:id="@+id/showPasswordButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/show_password_icon"
                android:src="@drawable/ic_eye"
                app:tint="#808080" />
        </LinearLayout>

        <!-- Forget Password -->
        <TextView
            android:id="@+id/forgetPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgetpass"
            android:textColor="#546E7A"
            android:layout_gravity="end"
            android:layout_marginBottom="24dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/login"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Create New Account -->
        <TextView
            android:id="@+id/signUpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createnew"
            android:layout_gravity="center"
            android:textColor="#546E7A"
            android:layout_marginBottom="32dp" />

        <!-- Continue With Accounts -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continuewithacc"
            android:layout_gravity="center"
            android:textColor="#546E7A"
            android:layout_marginBottom="16dp" />

        <!-- Social Media Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/googleButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#F8D7DA"
                android:text="@string/google"
                android:textColor="#B71C1C"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/facebookButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#E7F3FF"
                android:text="@string/fb"
                android:textColor="#4267B2"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
