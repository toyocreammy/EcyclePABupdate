<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna background input -->
    <solid android:color="#F1F3F5" />

    <!-- Radius sudut -->
    <corners android:radius="8dp" />

    <!-- Padding dalam input -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#D1D5DB" />
</shape>
